/**********FLASH**********/
&sfc {
	status = "okay";
	flash@0 {
		compatible = "spi-nand";
		reg = <0>;
		spi-max-frequency = <75000000>;
		spi-rx-bus-width = <4>;
		spi-tx-bus-width = <1>;
	};
};

/**********SDMMC**********/
&sdmmc {
	max-freqency = <50000000>;
	no-mmc;
	bus-width = <4>;
	cap-mmc-highspeed;
	cap-sd-highspeed;
	disable-wp;

	//sdio
	cap-sdio-irq;
	non-removable;
	no-1-8-v;
	supports-sdio;

	pinctrl-names = "default";
	pinctrl-0 = <&sdmmc0_clk &sdmmc0_cmd &sdmmc0_det &sdmmc0_bus4>;
	status = "okay";
};

/**********ETH**********/
&gmac {
	status = "okay";
};

/**********USB**********/
&u2phy {
	status = "okay";
};

&u2phy_otg {
	rockchip,dis-u2-susphy;
	status = "okay";
};

&usbdrd {
	status = "okay";
};

&usbdrd_dwc3 {
	status = "okay";
	dr_mode = "peripheral";
};

/**********SPI**********/
&spi0 {
	status = "okay";
	pinctrl-names = "default";
	// pinctrl-0 = <&spi0m0_pins>;		// 包含clk,mi,mo
	pinctrl-0 = <&spi0m0_cs0 &spi0m0_pins>;
	spidev@0 {
		status = "disabled";
		spi-max-frequency = <50000000>;
	};
//	fbtft@0 {
//		status = "okay";
//		spi-max-frequency = <50000000>;
//	};
};

/**********I2C**********/
/* I2C3_M1 */
&i2c3 {
	status = "disabled";
	pinctrl-0 = <&i2c3m1_xfer>;
	clock-frequency = <400000>;
    pinctrl-names = "default";
	focaltech@0 {
		status = "okay";
		compatible = "focaltech,fts"; // 兼容字符串，内核会根据它找到驱动
        reg = <0x38>; // I2C 设备地址

        // 中断配置
        interrupt-parent = <&gpio2>; // 中断父设备是 GPIO2
        interrupts = <&gpio2 RK_PA2 IRQ_TYPE_LEVEL_LOW>; // 连接到 GPIO0_A2 (即 GPIO2)，低电平触发
		focaltech,irq-gpio = <&gpio2 RK_PA2 IRQ_TYPE_LEVEL_LOW>;
		//复位引脚
		focaltech,reset-gpio = <&gpio1 RK_PC5 GPIO_ACTIVE_LOW>;	// 连接到 GPIO1_C5 (即 GPIO53)，低电平有效

		reset-delay-ms = <200>;

		focaltech,max-touch-number = <5>;
        focaltech,display-coords =  <0 0 240 320>;

	};
};

/* I2C1_M1 */
&i2c1 {
	status = "disabled";
	clock-frequency = <100000>;
};


/**********UART**********/
/* UART3_M1 */
&uart3 {
	status = "disabled";
};

/* UART4_M1 */
&uart4 {
	status = "disabled";
};

/**********RTC**********/
&rtc {
	status = "okay";
};
